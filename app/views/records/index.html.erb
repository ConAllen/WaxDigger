<p id="notice"><%= notice %></p>

<h1>Records</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Label</th>
      <th>Format</th>
      <th>Country</th>
      <th>Released</th>
      <th>Genre</th>
      <th>Tracklist</th>
      <th>Condition</th>
      <th>Original price</th>
      <th>Selling price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.Title %></td>
        <td><%= record.Label %></td>
        <td><%= record.Format %></td>
        <td><%= record.Country %></td>
        <td><%= record.Released %></td>
        <td><%= record.Genre %></td>
        <td><%= record.Tracklist %></td>
        <td><%= record.Condition %></td>
        <td><%= record.Original_Price %></td>
        <td><%= record.Selling_Price %></td>
        <td><%= link_to 'Show', record, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_record_path(record), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Record', new_record_path, class: "btn btn-link" %>
